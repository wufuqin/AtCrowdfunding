<script type="text/javascript">
    $(function () {
        $(".list-group-item").click(function(){
            if ( $(this).find("ul") ) {
                $(this).toggleClass("tree-closed");
                if ( $(this).hasClass("tree-closed") ) {
                    $("ul", this).hide("fast");
                } else {
                    $("ul", this).show("fast");
                }
            }
        });
    });
</script>

<%--添加许可--%>
<script>
    $("#addBtn").click(function(){

        var fname = $("#fname");
        var furl = $("#furl");

        var loadingIndex = -1 ;
        $.ajax({
            type : "POST",
            data : {
                "name" : fname.val(),
                "url" : furl.val(),
                "icon" : "glyphicon glyphicon-user",
                "pid" : "${param.id}"
            },
            url : "${APP_PATH}/permission/doAdd.do",
            beforeSend : function() {
                loadingIndex = layer.msg("保存中...", {icon: 16});
                return true ;
            },
            success : function(result){
                if(result.success){
                    layer.msg("保存成功...",{time:2000, icon:6, shift:6});
                    setTimeout(function () {{window.location.href="${APP_PATH}/permission/index.htm"}},2000);
                }else{
                    layer.msg("保存失败...", {time:2000, shift:6});
                }
            },
            error : function(){
                layer.msg("保存失败...",{time:2000, icon:5, shift:6});
            }
        });

    });
    $("#resetBtn").click(function(){
        $("#addForm")[0].reset();
    });
</script>

